<div id="content">
  <h1>Contact us</h1>
  <form method="post" action="sendEmail" id="contact-us-form">
    <input name="contact-us-form" value="true" type="hidden" />
    <h2>Contact us</h2>
    <fieldset>
      <label for="name">Name:</label>
      <input class="name" name="name" value="" type="text" maxlength="100" />
      <span class="required">*</span>
      <div class="input-error"></div>
    </fieldset>
    <fieldset>
      <label for="email">E-mail:</label>
      <input class="email" name="email" value="" type="text" maxlength="320" />
      <span class="required">*</span>
      <div class="input-error"></div>
    </fieldset>
    <fieldset>
      <label for="message">Message:</label>
      <textarea class="message" name="message" cols="3" rows="3"></textarea>
      <div class="input-error"></div>
    </fieldset>
    <fieldset class="buttons">
      <button class="button-3" name="contact-us-submit" type="submit">
        <span>
          <span>Send</span>
        </span>
      </button>
      <button class="button-3" name="reset" type="reset">
        <span>
          <span>Clear</span>
        </span>
      </button>
      <div class="submit-results"></div>
    </fieldset>
  </form>
</div>
